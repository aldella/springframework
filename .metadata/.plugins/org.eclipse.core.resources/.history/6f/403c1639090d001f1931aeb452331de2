<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample">

	<select id="getSampleList" resultType="com.spring2.dto.Sample">
		select * from ttt
	</select>
	
	<select id="getSample" resultType="com.spring2.dto.Sample">
		select * from ttt where id=#{num}
	</select>
	
	<select id="maxNum" resultType="int">
		
	</select>
	
	<insert id="insSample">
		insert into ttt values (#{num},#{title},#{res})	
	</insert>

	<update id="upSample">
		update ttt set title=#{title} where num=#{num}
	</update>
	
	<update id="delSample">
		delete from ttt where num=#{num}
	</update>

</mapper>
<!-- namespace나 해당 명령의 id는 중복되면 절대 안됨 -->