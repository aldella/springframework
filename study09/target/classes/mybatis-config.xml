<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC 
"-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- SQL의 결과나 입력DTO를 지정하는 부분 -->
	<!-- typeAliases 태그 내부에는 typeAlias 태그로 각종 DTO를 설정 -->
	<!-- package태그로 해당하는 여러 DTO클래스를 하나의 패키지로 설정 -->
	<!-- 별도의 각주는 사용하지 않는 것이 좋으며, 중복되어서도 안됨(패키지 통쨰로 등록되어있는걸 중복등록하는것도X) -->
	<!-- 기본 타입(int, char 등등)은 설정하지 않음. 적어도 Integer같은 참조형이어야함 -->
	<typeAliases>
		<!-- <package name="com.spring1" />  -->
		<typeAlias type="com.spring1.dto.Apple" alias="Apple"/>
		<!-- <typeAlias type="int" alias="int"/>  불가능! int라는 기본형이니까-->
		
	</typeAliases>
</configuration>