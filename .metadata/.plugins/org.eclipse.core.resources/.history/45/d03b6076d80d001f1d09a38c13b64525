<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store">
	<select id="getStoreList" resultType="com.spring1.dto.Store">
		select * from Store
	</select>	
	<select id="getStore" resultType="com.spring1.dto.Store">
		select * from Store where num=#{num}
	</select>
	<select id="maxNum" resultType="int">
		select num from (select * from Store order by num desc) where rownum=1
	</select>
	<!--  최근 마지막 번호(MySQL/MariaDB/PostGres) : select num from sample order by num desc limit 1; -->
	<insert id="insSample">
		insert into Store values (#{num}, #{title}, default)
	</insert>
	<update id="upSample">
		update Store set title=#{title} where num=#{num}
	</update>
	<delete id="delSample">
		delete from Store where num=#{num}
	</delete>
</mapper>